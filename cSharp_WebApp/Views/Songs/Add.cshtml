@using System.Data;
@using cSharp_WebApp.Models;
@{
    Songs song = new Songs();

    if (IsPost)
    {
        song.AddSong();
        Response.Redirect("/Songs/XML");
    }
}
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading"><center>New SONG</center></div>
                <div class="panel-body">
                    <form class="form-horizontal" method="post">
                           <div class="form-group">
                                <label for="id" class="col-md-4 control-label">ID:</label>
                              
                                <div class="col-md-6">
                                        <input type="text" id="id" class="form-control" name="id" placeholder="Make sure you dont copy previous ID"/>
                                 </div>
                              </div>

                            <div class="form-group">
                                <label for="title" class="col-md-4 control-label">Title:</label>

                                <div class="col-md-6">
                                    <input type="text" id="title" class="form-control" name="title" placeholder="Song name"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="artist" class="col-md-4 control-label">Artist:</label>

                                <div class="col-md-6">
                                    <input type="text" id="artist" class="form-control" name="artist" placeholder="The singer of the song"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="playtime" class="col-md-4 control-label">Playtime:</label>

                                <div class="col-md-6">
                                    <input type="text" id="playtime" class="form-control" name="playtime" placeholder="Duration of the song"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="release" class="col-md-4 control-label">Release:</label>

                                <div class="col-md-6">
                                    <input type="text" id="release" class="form-control" name="release" placeholder="Song released on"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="rating" class="col-md-4 control-label">Rating:</label>

                                <div class="col-md-6">
                                    <input type="text" id="rating" class="form-control" name="rating" placeholder="1 - 5"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button id="submit_button" type="submit" class="btn btn-primary">
                                        Save Song
                                    </button>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>